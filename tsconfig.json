{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist/**/*",
    "node_modules"
  ]
}